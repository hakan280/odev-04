<h1>Categories#new</h1>
<p>Find me in app/views/categories/new.html.erb</p>

<div class="col-md-4">
	<%= form_for @category do |f| %>
	<div class="form-group ">	
		<%= f.label :name%>
		<%= f.text_field :name , class: 'form-control'%>
	</div>
	<div class="form-group">
		<%=f.submit 'Submit', class: 'btn btn-success'%>
	</div>
	<% end %>
</div>